    /**
     * Actualiza la UI del control del bot
     */
    function updateBotControlUI() {
      const toggle = document.getElementById('bot-toggle');
      const label = document.getElementById('bot-toggle-label');
      const statusText = document.getElementById('bot-status-text');
      const statusLabel = document.getElementById('bot-status-label');
      const card = document.getElementById('bot-control-card');
      const warning = document.getElementById('bot-warning');
      const icon = document.getElementById('bot-control-icon');

      // Validaci√≥n basada en los 3 estados requeridos
      const canActivate = onboardingState.menu_configured && 
                         onboardingState.messages_customized && 
                         onboardingState.whatsapp_connected;

      console.log(`üé® Actualizando UI del bot:
        - Estado del bot: ${botActive ? 'ON' : 'OFF'}
        - WhatsApp conectado: ${onboardingState.whatsapp_connected}
        - Men√∫ configurado: ${onboardingState.menu_configured}
        - Mensajes personalizados: ${onboardingState.messages_customized}
        - Puede activar: ${canActivate}`);

      // Actualizar toggle
      if (botActive) {
        toggle.classList.add('active');
        toggle.classList.remove('disabled');
        label.textContent = 'ON';
        statusLabel.textContent = 'Bot activo y respondiendo mensajes';
        statusText.classList.add('active');
        statusText.classList.remove('inactive');
        card.classList.add('active');
        card.classList.remove('inactive');
        icon.textContent = '‚úÖ';
      } else {
        toggle.classList.remove('active');
        label.textContent = 'OFF';
        statusLabel.textContent = 'Bot desactivado, no responder√° mensajes';
        statusText.classList.remove('active');
        statusText.classList.add('inactive');
        card.classList.remove('active');
        card.classList.add('inactive');
        icon.textContent = 'ü§ñ';
        
        if (!canActivate) {
          toggle.classList.add('disabled');
        } else {
          toggle.classList.remove('disabled');
        }
      }

      // Mostrar/ocultar advertencia
      if (!canActivate && !botActive) {
        warning.classList.add('visible');
      } else {
        warning.classList.remove('visible');
      }
    }

    /**
     * Toggle del estado del bot
     */
    async function toggleBot() {
      // Validaci√≥n basada en los 3 estados requeridos
      const canActivate = onboardingState.menu_configured && 
                         onboardingState.messages_customized && 
                         onboardingState.whatsapp_connected;

      console.log(`üéØ Toggle bot llamado:
        - Estado actual del bot: ${botActive ? 'ON' : 'OFF'}
        - WhatsApp conectado: ${onboardingState.whatsapp_connected}
        - Men√∫ configurado: ${onboardingState.menu_configured}
        - Mensajes personalizados: ${onboardingState.messages_customized}
        - Puede activar: ${canActivate}`);

      // VALIDACI√ìN CR√çTICA: Si intenta activar el bot pero no cumple los requisitos
      if (!botActive && !canActivate) {
        console.warn('‚ö†Ô∏è Intento de activar bot sin cumplir requisitos');
        
        let missingSteps = [];
        if (!onboardingState.whatsapp_connected) missingSteps.push('- Conectar WhatsApp');
        if (!onboardingState.menu_configured) missingSteps.push('- Configurar el men√∫');
        if (!onboardingState.messages_customized) missingSteps.push('- Personalizar mensajes');
        
        alert('‚ö†Ô∏è Para activar el bot, debes completar los siguientes pasos:\n\n' + 
              missingSteps.join('\n') + 
              '\n\nCompleta estos pasos para poder activar el bot.');
        return;
      }

      // VALIDACI√ìN ADICIONAL: Verificar estados en Firebase antes de cambiar
      try {
        const onboardingSnapshot = await firebase.database().ref(`tenants/${tenantId}/onboarding/steps`).once('value');
        const steps = onboardingSnapshot.val();
        
        console.log(`üîç Validaci√≥n en Firebase:
          - Steps en Firebase: ${JSON.stringify(steps)}`);
        
        // Si intenta activar y no cumple requisitos en Firebase, bloquear
        if (!botActive && steps) {
          const firebaseCanActivate = steps.whatsapp_connected && 
                                      steps.menu_configured && 
                                      steps.messages_customized;
          
          if (!firebaseCanActivate) {
            console.error(`üö´ Validaci√≥n de requisitos fall√≥ en Firebase`);
            
            let missingSteps = [];
            if (!steps.whatsapp_connected) missingSteps.push('- Conectar WhatsApp');
            if (!steps.menu_configured) missingSteps.push('- Configurar el men√∫');
            if (!steps.messages_customized) missingSteps.push('- Personalizar mensajes');
            
            alert('‚ö†Ô∏è Los siguientes pasos a√∫n no est√°n completados:\n\n' + 
                  missingSteps.join('\n') + 
                  '\n\nCompleta estos pasos antes de activar el bot.');
            return;
          }
        }
        
      } catch (error) {
        console.error('Error validando requisitos:', error);
        alert('Error al validar los requisitos. Por favor intenta de nuevo.');
        return;
      }

      // Cambiar estado
      const newState = !botActive;
      botActive = newState;

      // Guardar en Firebase
      try {
        await firebase.database().ref(`tenants/${tenantId}/bot/config`).set({
          active: botActive,
          lastUpdated: new Date().toISOString()
        });

        console.log(`‚úÖ Estado del bot actualizado en Firebase: ${botActive ? 'ACTIVO (true)' : 'DESACTIVADO (false)'}`);
        
        // Actualizar UI
        updateBotControlUI();

        // Mostrar mensaje de confirmaci√≥n
        if (botActive) {
          alert('‚úÖ Bot activado\n\nEl bot ahora responder√° autom√°ticamente a los mensajes de tus clientes.');
        } else {
          alert('üî¥ Bot desactivado\n\nEl bot no responder√° a los mensajes hasta que lo vuelvas a activar.');
        }

      } catch (error) {
        console.error('Error actualizando estado del bot:', error);
        alert('Error al actualizar el estado del bot. Por favor intenta de nuevo.');
        // Revertir el cambio
        botActive = !botActive;
        updateBotControlUI();
      }
    }

