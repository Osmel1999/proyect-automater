# Configuración de Humanización del Bot
# Ajusta estos valores para controlar qué tan "humano" se comporta el bot

# ====================================
# DELAY ANTES DE MARCAR COMO LEÍDO
# ====================================
# Simula el tiempo que tarda un humano en leer el mensaje
# antes de marcarlo como leído (checkmarks azules)

# Mínimo en milisegundos (0.8 segundos)
HUMANIZATION_READ_DELAY_MIN=800

# Máximo en milisegundos (5 segundos)
HUMANIZATION_READ_DELAY_MAX=5000

# ====================================
# DELAY DE "PENSAMIENTO"
# ====================================
# Tiempo entre marcar como leído y empezar a escribir
# (simula pensar la respuesta)

# Mínimo en milisegundos (0.5 segundos)
HUMANIZATION_THINKING_DELAY_MIN=500

# Máximo en milisegundos (2.5 segundos)
HUMANIZATION_THINKING_DELAY_MAX=2500

# ====================================
# VELOCIDAD DE ESCRITURA SIMULADA
# ====================================
# Caracteres por minuto que "escribe" el bot
# Afecta la duración del estado "escribiendo..."

# Velocidad mínima (escritura lenta, pensando)
HUMANIZATION_TYPING_SPEED_MIN=40

# Velocidad máxima (escritura rápida)
HUMANIZATION_TYPING_SPEED_MAX=80

# ====================================
# DURACIÓN DEL ESTADO "ESCRIBIENDO..."
# ====================================
# Límites para evitar tiempos muy cortos o muy largos

# Duración mínima en milisegundos (1 segundo)
HUMANIZATION_TYPING_DURATION_MIN=1000

# Duración máxima en milisegundos (15 segundos)
HUMANIZATION_TYPING_DURATION_MAX=15000

# ====================================
# VARIABILIDAD (JITTER)
# ====================================
# Porcentaje de variabilidad adicional en los tiempos
# 0.30 = ±30% del valor calculado

HUMANIZATION_JITTER=0.30

# ====================================
# HUMANIZACIÓN GLOBAL
# ====================================
# Activar/desactivar humanización para todos los mensajes
# true = activada (recomendado)
# false = desactivada (solo para testing)

HUMANIZATION_ENABLED=true

# ====================================
# NOTAS
# ====================================
# 
# Para que un bot sea muy rápido (menos humano, más riesgo):
# - READ_DELAY: 500-1500
# - THINKING_DELAY: 200-800
# - TYPING_SPEED: 80-120
# 
# Para que un bot sea muy lento (muy humano, menos riesgo):
# - READ_DELAY: 2000-8000
# - THINKING_DELAY: 1000-4000
# - TYPING_SPEED: 30-50
# 
# Configuración actual (BALANCEADA):
# - Lee mensaje en 0.8-5 segundos
# - Piensa respuesta en 0.5-2.5 segundos
# - Escribe a 40-80 caracteres/minuto
# - Total: ~3-12 segundos por respuesta típica
