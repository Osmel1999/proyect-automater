{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "CHECKLIST-*.md",
      "GUIA-*.md",
      "server/**",
      "*.sh",
      "archive_*/**",
      "backup_*/**",
      "login.html"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/whatsapp-connect",
        "destination": "/whatsapp-connect.html"
      },
      {
        "source": "/onboarding-success",
        "destination": "/onboarding-success.html"
      },
      {
        "source": "/kds",
        "destination": "/kds.html"
      },
      {
        "source": "/home",
        "destination": "/index.html"
      },
      {
        "source": "/auth",
        "destination": "/auth.html"
      },
      {
        "source": "/select",
        "destination": "/select.html"
      },
      {
        "source": "/dashboard",
        "destination": "/dashboard.html"
      },
      {
        "source": "/onboarding",
        "destination": "/whatsapp-connect.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300"
          }
        ]
      }
    ]
  }
}
