{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      "CHECKLIST-*.md",
      "GUIA-*.md"
    ],
    "rewrites": [
      {
        "source": "/kds",
        "destination": "/kds.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/demo",
        "destination": "/demo.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300"
          }
        ]
      }
    ]
  }
}
